<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fortuan_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tradebackground"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/Trade_LinearLayoutStyle"
                android:layout_marginLeft="120dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text_left_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/brick_trade_icon" />


                <ImageView
                    android:id="@+id/right_side_res11"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button"
                    android:textSize="@dimen/trade_text_size" />

            </LinearLayout>

            <LinearLayout style="@style/Trade_LinearLayoutStyle"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text_left_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wheat_trade_icon" />

                <ImageView
                    android:id="@+id/right_side_res21"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button" />

            </LinearLayout>

            <LinearLayout style="@style/Trade_LinearLayoutStyle"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text_left_31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ore_trade_icon" />

                <ImageView
                    android:id="@+id/right_side_res31"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button"
                    android:textSize="@dimen/trade_text_size" />

            </LinearLayout>

            <LinearLayout style="@style/Trade_LinearLayoutStyle"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text_left_41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sheep_trade_icon" />

                <ImageView
                    android:id="@+id/right_side_res41"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button"
                    android:textSize="@dimen/trade_text_size" />
            </LinearLayout>

            <LinearLayout
                style="@style/Trade_LinearLayoutStyle"
                android:layout_marginRight="120dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_left_51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />


                <ImageView
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/wood_trade_icon" />

                <ImageView
                    android:id="@+id/right_side_res51"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/confirm_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp"
                android:src="@drawable/confirm_trade_button" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>