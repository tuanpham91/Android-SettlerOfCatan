<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trade_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tradebackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trader_1_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="100dp"
                android:text="Tuan"
                android:textSize="@dimen/trade_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout style="@style/Trade_LinearLayoutStyle">

                <ImageView
                    android:id="@+id/left_side_res1"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/plus_button"
                    android:textSize="@dimen/trade_text_size" />

                <ImageView
                    android:id="@+id/bricktradeicon"
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/brick_trade_icon" />

                <TextView
                    android:id="@+id/text_left_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/right_side_res1"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button"
                    android:textSize="@dimen/trade_text_size" />

            </LinearLayout>

            <LinearLayout style="@style/Trade_LinearLayoutStyle">

                <ImageView
                    android:id="@+id/left_side_res2"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/plus_button" />

                <ImageView
                    android:id="@+id/grain"
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wheat_trade_icon" />

                <TextView
                    android:id="@+id/text_left_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/right_side_res2"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button" />

            </LinearLayout>

            <LinearLayout style="@style/Trade_LinearLayoutStyle">

                <ImageView
                    android:id="@+id/left_side_res3"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/plus_button" />

                <ImageView
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ore_trade_icon" />

                <TextView
                    android:id="@+id/text_left_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/right_side_res3"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button"
                    android:textSize="@dimen/trade_text_size" />

            </LinearLayout>

            <LinearLayout style="@style/Trade_LinearLayoutStyle">

                <ImageView
                    android:id="@+id/left_side_res4"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/plus_button" />

                <ImageView
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sheep_trade_icon" />

                <TextView
                    android:id="@+id/text_left_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/right_side_res4"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button"
                    android:textSize="@dimen/trade_text_size" />
            </LinearLayout>

            <LinearLayout style="@style/Trade_LinearLayoutStyle">

                <TextView
                    android:id="@+id/text_left_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:text="@string/bank4for1"
                    android:textSize="@dimen/trade_text_size"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/left_side_res5"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/plus_button" />

                <ImageView
                    style="@style/Trade_ImageView_Style"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/wood_trade_icon" />

                <ImageView
                    android:id="@+id/right_side_res5"
                    style="@style/PlusStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus_button" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/activity_chat"></include>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/trader_2_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:text="Player 2"
            android:textSize="@dimen/trade_text_size" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:id="@+id/request_trade_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="29dp"
                android:src="@drawable/request_trade_button" />

            <ImageView
                android:id="@+id/confirm_trade_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp"
                android:src="@drawable/confirm_trade_button" />

            <ImageView
                android:id="@+id/cancel_trade_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/cancel_trade_button" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>