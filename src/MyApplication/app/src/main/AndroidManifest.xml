<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tuan.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/game_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".MainActivity" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StartActivity" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name=".PlayActivity" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
        </activity>

        <activity android:name=".TradeActivity" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
        </activity>

        <activity android:name=".BuildActivity"  android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
        </activity>

        <activity android:name=".ExchangeActivity" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
        </activity>

        <activity android:name=".MessageActivity" android:theme="@android:style/Theme.Dialog" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name=".CardActivity" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
        </activity>

        <activity android:name=".ChatActivity" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
        </activity>
    </application>

</manifest>